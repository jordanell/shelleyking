<div class="post-list-item">
  <%= link_to post_path(post.slug), class: 'more' do %>
    <h2><%= post.title %></h2>
  <% end %>

  <%= render partial: 'posts/meta', locals: { post: post } %>
  <%= link_to(image_tag(post.hero_image.url(:small)), "/posts/#{post.slug}") %>
  <p>
    <%= truncate_html post.body, length: 500 %>
  </p>
  <p>
    <%= link_to post_path(post.slug), class: 'more' do %>
      Read Post
    <% end %>
  </p>
</div>
